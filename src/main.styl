html, body
  margin: 0
  padding: 0

  background: #222

  font-family: sans-serif
  line-height: 1.4em

  color: #eee

.app
  display: flex
  flex-flow: column nowrap

  margin: 0 auto
  padding: 0

  max-width: 700px

.chat-container
  background: #333

  max-height: 0
  transition: max-height 1s ease-out

  overflow: hidden

  border: 1px solid #eee
  border-bottom: none

.chat-list
  // TODO

.chat-list-message
  display: flex
  flex-flow: row nowrap

  padding 0 0.25rem

.chat-list-message__timestamp
  display: none

  color: #666
  margin-right: 1rem

  user-select: none // no text selection

.chat-list-message__from
  font-weight: bold
  color: pink

.chat-list-message__separator
  margin-right: 1rem

.chat-list-message__content
  // TODO

.input-container
  display: flex
  flex-flow: row nowrap

  background: pink

.username-input-container
  height: 2rem
  max-width: 120px

  border-right: 3px solid cornflowerblue

.username-input
  width: calc( 100% - 8px )
  height: calc( 100% - 4px )

  font-size: 1.2rem
  padding: 2px
  padding-left: 0.375em

  outline: none
  border: none

.message-input-container
  display: flex
  flex-flow: row nowrap

  flex-grow: 1
  height: 2rem

.message-input
  width: calc( 100% - 8px )
  height: calc( 100% - 4px )

  font-size: 1.2rem
  padding: 2px
  padding-left: 0.375em

  border: none
  outline: none

.message-input-container__button
  min-width: 100px
  height: 100%

  border: none
  outline: none

  margin: 0
  padding: 0

  font-size: 1.3em

  border-left: 2px solid cornflowerblue

  &:hover
    cursor: pointer
    background: lighten( cornflowerblue, 75% )
    font-size: 1.4em

  &:active
    cursor: pointer
    background: lighten( cornflowerblue, 75% )
    font-size: 1.2em
